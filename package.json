{
  "name": "wct-istanbub",
  "version": "0.0.1",
  "description": "Instanbul coverage reporting for projects being tested by web-component-tester",
  "main": "lib/plugin.js",
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/Bubbit/wct-istanbub.git"
  },
  "keywords": [
    "web-component-tester",
    "istanbul",
    "coverage",
    "wct"
  ],
  "author": "Dane O'Connor",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/Bubbit/wct-istanbub/issues"
  },
  "homepage": "https://github.com/Bubbit/wct-istanbub",
  "dependencies": {
    "express": "^4.16.2",
    "html-script-hook": "^0.10.0",
    "istanbul": "^0.4.0",
    "istanbul-threshold-checker": "^0.1.0",
    "lodash": "^4.0.0",
    "minimatch": "^3.0.0",
    "parseurl": "^1.3.0",
    "esprima": "4.0.0"
  },
  "wct-plugin": {
    "cli-options": {
      "reporters": {
        "help": "List of reporters to use",
        "full": "reporters",
        "list": true
      },
      "dir": {
        "help": "Coverage directory",
        "full": "dir"
      },
      "exclude": {
        "help": "Scripts to exclude from testing",
        "full": "exclude"
      },
      "include": {
        "help": "Scripts to include in testing",
        "full": "include"
      }
    }
  }
}
